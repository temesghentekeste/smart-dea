<div class="row" id="top">
  <div class="col-sm-3">
    <% if user_signed_in? %>
      <div class="card border-0" style="width: 100%;">
        <%= image_tag('profile-banner', class: 'card-img-top')%>
        <div class="card-body d-flex p-0 pt-2 ml-3 profile-info">
          <div class="ml-4 mr-2 mt-1">
            <%= gravatar_for(current_user)%>
          </div>
          <div class="profile-username">
            <p class="my-0"><%= current_user.username%></p>
            <p><%= current_user.username%></p>
          </div>
        </div>
        <div class="card-footer profile d-flex justify-content-between">
          <div>Smart Ideas <br>
            <h6><%= current_user.posts.count %></h6>
          </div>
          <div>Followers <br>
            <h6><%= current_user.followers.count %></h6>
          </div>
        </div>
      </div>
    <% end %>

    <div class="card">
      <div class="card-body">
        <h2 class="lead">Smart Idea</h2>
        <p class="text-muted">
          Smart Idea lets you find and follow new poeple, see ideas from poeple around the globe. Your ideas will also apper here so that other poeple can see your ideas and interests and follow you if they are interested.
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
      <%= add_new_post %>
      <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-1 p-1 mr-4">
                  <figure>
                    <%= gravatar_for(post.user) %>
                  </figure>
                </div>
                <div class="col-10 p-2">
                  <p class="post-title">
                    <span class="author font-weight-bold"><%= post.user.username %></span>
                    - <span class="created-at text-muted"><%= post.created_at.to_formatted_s(:short) %></span>
                  </p>
                  <p class="post-content"><%= post.content %></p>
                </div>
                <div class="col-12">
                  <p class="post-links">
                    <i class="fas fa-comments g-links"></i>
                    <i class="fas fa-retweet g-links"></i>
                    <i class="fas fa-heart g-links"></i>
                    <i class="fas fa-cloud-upload-alt g-links"></i>
                  </p>
                </div>
              </div>
            </div>
          </div>  
      <% end %>
    </div>
  <div class="col-sm-3">
    <div class="card">
      <div class="card-body">
        <p>about</p>
      </div>
    </div>
  </div>
</div>

<%# Trends %>
<div class="row mt-2">
  <div class="col-sm-3">
  </div>
</div>

<%# Back to the top %>
<div class="row">
  <div class="col-12 text-center">
    <a href="#top" class="text-decoration-none text-muted">Back to the top <i class="fas fa-arrow-up"></i></a>
  </div>
</div>
