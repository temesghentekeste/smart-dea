<%# Second row %>
<div class="row">
  <div class="col-sm-3">
    <% if @user_profile %>
      <div class="card border-0" style="width: 100%;">
        <%= image_tag('profile-banner', class: 'card-img-top')%>
        <div class="card-body d-flex p-0 pt-2 ml-3 profile-info">
          <div class="ml-5 pl-4 mr-2 mt-1">
            <%= gravatar_for(@user_profile)%>
          </div>
          <div class="profile-username">
            <p class="my-0"><%= @user_profile.username%></p>
            <p>@<%= @user_profile.username%></p>
          </div>
        </div>
        <div class="card-footer profile d-flex justify-content-between">
          <div>Smart Ideas <br>
            <h6>18</h6>
          </div>
          <div>Followers <br>
            <h6>10.8K</h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>

 
  <div class="col-sm-6">
      <%= add_new_post %>
      <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-1 p-1 mr-4">
                  <figure>
                    <%= gravatar_for(post.user) %>
                  </figure>
                </div>
                <div class="col-10 p-2">
                  <p class="post-title">
                    <span class="author font-weight-bold"><%= post.user.username %></span>
                    - <span class="created-at text-muted"><%= post.created_at.to_formatted_s(:short) %></span>
                  </p>
                  <p class="post-content"><%= post.content %></p>
                </div>
                <div class="col-12">
                  <p class="post-links">
                    <i class="fas fa-comments g-links"></i>
                    <i class="fas fa-retweet g-links"></i>
                    <i class="fas fa-heart g-links"></i>
                    <i class="fas fa-cloud-upload-alt g-links"></i>
                  </p>
                </div>
              </div>
            </div>
          </div>  
      <% end %>
    </div>
  
  <div class="col-sm-3">
  <%= render '/components/follow_button', :user => User.find_by_username(params[:id]) %>
    <div class="card mb-3">
      <div class="card-header">
        Who To Follow
      </div>
      <ul class="list-group list-group-flush">
        <% @toFollow.each do |follow|%>
            <span class="list-group-item">
               @<%= link_to follow.username, profile_path(follow.username), class: 'text-decoration-none font-weight-600 text-dark'%>
            </span>
            
        <% end %>
      </ul>
    </div>

    <div class="card">
      <div class="card-body">
        <p>trends</p>
      </div>
    </div>
  </div>
</div>

<div class="col-12 text-center text-muted  mx-0 mt-5">
    <p>All Rights Reserved &copy; 2020 <a href="https://uandiprogramming.blogspot.com" target="_blank" class="text-muted text-decoration-none">uandiprogramming</a></p>
</div>
