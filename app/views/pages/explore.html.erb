<div class="row">
  <div class="col-sm-3">
    <% if user_signed_in? %>
      <div class="card border-0" style="width: 100%;">
        <%= image_tag('profile-banner', class: 'card-img-top')%>
        <div class="card-body d-flex p-0 pt-2 ml-3 profile-info">
          <div class="ml-4 mr-2 mt-1">
            <%= gravatar_for(current_user)%>
          </div>
          <div class="profile-username">
            <p class="my-0"><%= current_user.username%></p>
            <p><%= current_user.username%></p>
          </div>
        </div>
        <div class="card-footer profile d-flex justify-content-between">
          <div>Smart Ideas <br>
            <h6>18</h6>
          </div>
          <div>Followers <br>
            <h6>10.8K</h6>
          </div>
        </div>
      </div>
    <% end %>

    <div class="card">
      <div class="card-body">
        <h2 class="lead">Explore</h2>
        <p class="text-muted">
          This page aggregates smart ideas from ALL Smart Idea Users. It allows you to find and follow new poeple, and your ideas will also apper here so that other poeple can see your ideas and interests and follow you if they chose.
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
      <%= add_new_post %>
      <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-1 p-1 mr-4">
                  <figure>
                    <%= gravatar_for(post.user) %>
                  </figure>
                </div>
                <div class="col-10 p-2">
                  <p class="post-title">
                    <span class="author font-weight-bold"><%= post.user.username %></span>
                    - <span class="created-at text-muted"><%= post.created_at.to_formatted_s(:short) %></span>
                  </p>
                  <p class="post-content"><%= post.content %></p>
                </div>
                <div class="col-12">
                  <p class="post-links">
                    <i class="fas fa-comments g-links"></i>
                    <i class="fas fa-retweet g-links"></i>
                    <i class="fas fa-heart g-links"></i>
                    <i class="fas fa-cloud-upload-alt g-links"></i>
                  </p>
                </div>
              </div>
            </div>
          </div>  
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="col-sm-3">
        <div class="card mb-3">
          <div class="card-header">
            Who To Follow
          </div>
          <ul class="list-group list-group-flush">
            <% @toFollow.each do |follow|%>
                <%= link_to profile_path(follow.username), class: 'text-decoration-none' do %>
                  <div class= "list-group-item d-flex">
                  <figure class="mr-3 mt-2">
                          <%= gravatar_for(follow) %>
                        </figure>
                    <span class="mt-3 text-decoration-none font-weight-600 text-dark">
                      @<%= follow.username %>
                    </span>
                  </div>
                <% end %>
            <% end %>
          </ul>
        </div>
        <div class="card">
          <div class="card-body">
            <p>about</p>
          </div>
        </div>
      </div>
    <% end %>
</div>

